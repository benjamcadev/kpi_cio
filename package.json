{
  "name": "kpi-videowall",
  "version": "0.1.2",
  "private": true,
  "scripts": {
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "dev:web": "next dev -p 3000",
    "dev:electron": "cross-env NODE_ENV=development electron dist-electron/main.js",
    "dev": "concurrently -k \"npm run dev:web\" \"wait-on tcp:3000 && npm run dev:electron\"",
    "build:web:ssr": "next build",
    "start:next": "next start -p 3000",
    "build:electron": "tsc -p electron",
    "dist": "npm run build:web:ssr && npm run build:electron && electron-builder",
    "dist:win": "npm run build:web:ssr && npm run build:electron && electron-builder --win --x64 --config.win.target=nsis"
  },
  "main": "dist-electron/main.js",
  "build": {
    "appId": "com.benjamcadev.kpidashboard",
    "files": [
      "dist-electron/**",
      ".next/**",
      "next.config.js",
      "public/**",
      "package.json",
      "node_modules/**",
      ".env",
      "credentials.json"
    ],
    "mac": {
      "target": "dmg",
      "category": "public.app-category.productivity"
    }
  },
  "dependencies": {
    "@azure/msal-node": "^3.7.1",
    "dotenv": "^17.2.1",
    "framer-motion": "^12.23.12",
    "googleapis": "^155.0.1",
    "next": "15.4.6",
    "node-fetch": "^3.3.2",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "xlsx": "^0.18.5"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@tailwindcss/postcss": "^4",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "concurrently": "^9.2.0",
    "cross-env": "^10.0.0",
    "electron": "^37.3.1",
    "electron-builder": "^26.0.12",
    "eslint": "^9",
    "eslint-config-next": "15.4.6",
    "tailwindcss": "^4",
    "typescript": "^5",
    "wait-on": "^8.0.4"
  }
}
